#include <stdio.h>
#include <stdlib.h>
#include <dirent.h>

int main() {
    DIR *dir;
    struct dirent *entry;
    int file_count = 0;

    dir = opendir(".");
    if (dir == NULL) {
        perror("Error opening directory");
        return 1;
    }
    printf("Files in the current directory:\n");
    while ((entry = readdir(dir)) != NULL) {
  
        if (entry->d_name[0] != '.') {
            printf("%s\n", entry->d_name);
            file_count++;
        }
    }
    closedir(dir);
    printf("\nTotal number of files: %d\n", file_count);
    return 0;
}

Q1
#include <stdio.h>
#include <stdlib.h>
#include <dirent.h>
#include <sys/stat.h>
#include <time.h>
#include <string.h>

int main() {
    int target_month, target_year;
    struct dirent *entry;
    struct stat file_stat;
    struct tm *file_time;
    printf("Enter the target month (1-12): ");
    scanf("%d", &target_month);
    printf("Enter the target year (e.g., 2024): ");
    scanf("%d", &target_year);

    DIR *dir = opendir(".");
    if (!dir) {
        perror("Error opening directory");
        return 1;
    }
    printf("Files created in %d/%d:\n", target_month, target_year);
    while ((entry = readdir(dir)) != NULL) {
        if (entry->d_type == DT_DIR) {
            continue;
        }
        if (stat(entry->d_name, &file_stat) == -1) {
            perror("Error getting file information");
            continue;
        }
        file_time = localtime(&file_stat.st_mtime);
        if (file_time->tm_mon + 1 == target_month && file_time->tm_year + 1900 == target_year) {
            printf("%s\n", entry->d_name);
        }
    }
    closedir(dir);
    return 0;
}
